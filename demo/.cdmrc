# .cdmrc - Fermion / codedamn config for CalculatorSpring
playground-view: terminal-editor-browser

# Files to open by default in the editor (adjust paths if your files differ)
tabs:
  - 'src/main/java/com/example/demo/DemoApplication.java'
  - 'src/main/java/com/example/demo/CalculatorController.java'
  - 'src/main/java/com/example/demo/CalculatorService.java'
  - 'pom.xml'
  - 'README.md'

# Terminals: first terminal will be used by the Run button.
# We start the Spring Boot app using mvn. Use -DskipTests to speed it up.
# 'bash -lc' lets us use shell features and keep the process in foreground (so logs show).
terminals:
  - "bash -lc 'mvn -DskipTests=true spring-boot:run'"

# Run button: will execute this in the FIRST terminal (it sends Ctrl+C first to stop previous run)
run-button: bash -lc 'mvn -DskipTests=true spring-boot:run'

# Browser preview: show the calculator add endpoint by default.
# NOTE: if the iframe returns 404 or is blocked by X-Frame-Options, open link in a new tab.
browser-link: 'http://localhost:8080/api/calculator/add?a=1&b=2'
